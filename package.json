{
    "name": "@candlelib/flame",
    "version": "0.0.15",
    "description": "Wick Component Editor & Language Server",
    "author": "Anthony C Weathersby",
    "types": "build/types/server.d.ts",
    "type": "module",
    "bin": {
        "candle.flame": "index.js"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "buildsite": "npm install && candle.wick compile --output ./www ./site",
        "test": "echo \"TODO: setup tests\""
    },
    "repository": {
        "type": "git",
        "url": "https://www.github.com/CandleLibrary/flame"
    },
    "keywords": [
        "hydrocarbon",
        "wick",
        "language server",
        "vscode"
    ],
    "license": "MIT",
    "dependencies": {
        "@candlelib/uri": "*",
        "@candlelib/conflagrate": "*",
        "@candlelib/spark": "*",
        "@candlelib/glow": "*",
        "@candlelib/wind": "*",
        "@candlelib/paraffin": "*",
        "@candlelib/css": "^0.3.15",
        "@candlelib/js": "^0.5.15",
        "@candlelib/lantern": "^0.2.6",
        "@candlelib/log": "^0.1.2",
        "@candlelib/wick": "^0.15.16",
        "vscode-languageserver": "^7.0.0",
        "vscode-languageserver-textdocument": "^1.0.1",
        "ws": "^8.2.3"
    },
    "devDependencies": {
        "@candlelib/cure": "*",
        "@types/node": "^16.10.2",
        "@types/ws": "^8.2.0"
    },
    "engines": {
        "vscode": "^1.40.0",
        "node": "*"
    },
    "displayName": "CandleLibrary Flame",
    "publisher": "candle-smith",
    "main": "vscode_client/bin/extension.js",
    "languages": [
        {
            "id": "wick-component",
            "extensions": [
                ".wick",
                "wick"
            ],
            "aliases": [
                "Wick",
                "wick"
            ]
        },
        {
            "id": "hydrocarbon-grammar",
            "aliases": [
                "Hydrocarbon Grammar",
                "hydrocarbon-grammar"
            ],
            "extensions": [
                "hcg",
                ".hcg"
            ]
        }
    ],
    "activationEvents": [
        "onLanguage:wick-component",
        "onLanguage:hydrocarbon-grammar"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Flame Language Server",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    }
}