{
  "name": "@galactrax/flame",
  "version": "0.0.5",
  "description": "A browser tech web editing app based on wick and electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start.win.release": "set \"FLAME_TEST=\" && set \"FLAME_DEV=\" && electron .",
    "start.win.dev": "set \"FLAME_TEST=\" && set \"FLAME_DEV=true\" && electron .",
    "start.win.test": "set \"FLAME_TEST=true\" && set \"FLAME_DEV=\" && electron .",
    "start.unix.release": "FLAME_TEST=false FLAME_DEV=false electron .",
    "start.unix.dev": "FLAME_TEST=false FLAME_DEV=true electron .",
    "start.unix.test": "FLAME_TEST=true electron .",
    "build": "rollup --config ./assets/build/config/config.js",
    "build.watch": "rollup --watch --config ./assets/build/config/config.js",
    "prepare": "rollup --config ./assets/build/config/config.js",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://www.gitlab.com/anthonycweathersby/flame"
  },
  "keywords": [
    "wick",
    "PWA"
  ],
  "author": "Anthony C Weathersby",
  "license": "ISC",
  "dependencies": {
    "@candlefw/charcoal": "*",
    "@candlefw/css": "*",
    "@candlefw/glow": "*",
    "@candlefw/ll": "*",
    "@candlefw/whind": "*",
    "@candlefw/wick": "*",
    "electron": "^4.0.0",
    "paper": "^0.12.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "rollup": "^0.68.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "spectron": "^5.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-fallthrough": [
        "error",
        {
          "commentPattern": "[iI]ntentional( - [\\w\\W]*){0,1}"
        }
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "semi": [
        "warn",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "prefer-const": "warn",
      "new-cap": [
        "error"
      ],
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "function",
          "next": "*"
        }
      ]
    }
  }
}
