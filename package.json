{
    "name": "@candlelib/flame",
    "version": "0.0.15",
    "description": "Wick Component Editor & Language Server",
    "displayName": "flame",
    "main": "vscode_client/bin/extension.js",
    "types": "build/types/server.d.ts",
    "type": "module",
    "publisher": "candle-smith",
    "bin": {
        "candle.flame": "index.js"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile"
    },
    "repository": {
        "type": "git",
        "url": "https://www.gitlab.com/anthonycweathersby/flame"
    },
    "keywords": [
        "wick",
        "language server"
    ],
    "author": "Anthony C Weathersby",
    "license": "MIT",
    "engines": {
        "vscode": "^1.40.0",
        "node": "*"
    },
    "dependencies": {
        "@candlelib/lantern": "0.1.0",
        "@candlelib/paraffin": "0.1.0",
        "@candlelib/glow": "0.1.0",
        "@candlelib/css": "0.1.0",
        "@candlelib/wick": "0.12.7",
        "@candlelib/log": "*",
        "ws": "^8.2.3"
    },
    "devDependencies": {
        "@types/node": "^16.10.2",
        "@types/ws": "^8.2.0"
    },
    "languages": [
        {
            "id": "wick-component",
            "extensions": [
                ".wick",
                "wick"
            ],
            "aliases": [
                "Wick",
                "wick"
            ]
        },
        {
            "id": "hydrocarbon-grammar",
            "aliases": [
                "Hydrocarbon Grammar",
                "hydrocarbon-grammar"
            ],
            "extensions": [
                "hcg",
                ".hcg"
            ]
        }
    ],
    "activationEvents": [
        "onLanguage:wick-component",
        "onLanguage:hydrocarbon-grammar"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Flame Language Server",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    }
}