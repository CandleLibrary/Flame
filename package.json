{
  "name": "@candlefw/flame",
  "version": "0.0.6",
  "description": "A browser tech web editing app based on wick and electron",
  "main": "main.mjs",
  "bin": {
    "flame": "main.mjs"
  },
  "scripts": {
    "start": "node --experimental-modules ./main.mjs",
    "build": "rollup --config ./build/config/config.js",
    "build.watch": "rollup --watch --config ./build/config/config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://www.gitlab.com/anthonycweathersby/flame"
  },
  "keywords": [
    "wick",
    "PWA"
  ],
  "author": "Anthony C Weathersby",
  "license": "ISC",
  "dependencies": {
    "@candlefw/radiate": "latest",
    "@candlefw/lantern": "latest",
    "@candlefw/charcoal": "latest",
    "@candlefw/css": "latest",
    "@candlefw/glow": "latest",
    "@candlefw/ll": "latest",
    "@candlefw/whind": "latest",
    "@candlefw/wick": "latest",
    "paper": "^0.12.0"
  },
  "devDependencies": {
    "@candlefw/hydrocarbon": "latest",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "rollup": "^1.16.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-fallthrough": [
        "error",
        {
          "commentPattern": "[iI]ntentional( - [\\w\\W]*){0,1}"
        }
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "semi": [
        "warn",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "prefer-const": "warn",
      "new-cap": [
        "error"
      ],
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "function",
          "next": "*"
        }
      ]
    }
  }
}
