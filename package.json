        "@candlelib/lantern": "0.1.0",
        "@candlelib/paraffin": "0.1.0",
        "@candlelib/glow": "0.1.0",
        "@candlelib/css": "0.1.0",
        "@candlelib/wick": "0.12.7",
        "@candlelib/log": "*",
        "ws": "^8.2.3"
    },
    "devDependencies": {
        "@types/node": "^16.10.2",
        "@types/ws": "^8.2.0"
    }
}